{
  "name": "@kne/remote-loader",
  "author": "linzp",
  "version": "1.0.4",
  "description": "加载一个webpack5生成的邦联模块",
  "dependencies": {
    "@kne/ensure-slash": "^0.1.0",
    "@kne/use-ref-callback": "^0.1.2",
    "lodash": "^4.17.21"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "run-p start:lib start:md start:example",
    "build": "run-s build:lib build:md build:example",
    "test": "react-scripts test --coverage",
    "eject": "react-scripts eject",
    "init": "cd example &&npm i --legacy-peer-deps && node scripts/init.js",
    "build:lib": "microbundle --no-compress --format modern,cjs --jsx React.createElement --jsxFragment React.Fragment",
    "build:md": "create-md",
    "start:md": "create-md --watch",
    "start:lib": "microbundle watch --no-compress --format modern,cjs --jsx React.createElement --jsxFragment React.Fragment",
    "build:example": "cd example && npm run build",
    "start:example": "cd example && npm run start",
    "deploy": "gh-pages -d example/build",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "syntax": {
    "esmodules": true
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "peerDependencies": {
    "react": ">=16.x",
    "react-dom": ">=16.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@kne/md-doc": "^0.1.7",
    "@kne/microbundle": "^0.15.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "cross-env": "^7.0.3",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  }
}
